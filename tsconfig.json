{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["jest"],
    "lib": ["ES2019", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@factories/*": ["src/factories/*"],
      "@app/*": ["src/app/*"],
      "@renderer/*": ["src/renderer/*"],
      "@bootstrap/*": ["src/bootstrap/*"],
      "@ui/*": ["src/ui/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "typescript"]
}
